<Window x:Class="MagazijnBeheersysteem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Magazijn Beheersysteem" Height="600" Width="850"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zoekbalk en filters -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <GroupBox Header="Lijst kiezen" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="ListSelector" Width="180" SelectionChanged="OnListChanged"/>
                    <TextBox x:Name="NewListBox" Width="120" Margin="5,0,0,0"/>
                    <Button Content="➕" Width="30" Click="OnCreateListClicked" ToolTip="Nieuwe lijst maken"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Zoeken">
                <DockPanel>
                    <TextBox x:Name="SearchBox" Width="200" Margin="5" DockPanel.Dock="Left"/>
                    <Button Content="Zoek" Width="75" Margin="5" Click="OnSearchClicked"/>
                    <Button Content="Reset" Width="75" Margin="5" Click="OnResetClicked"/>
                    <CheckBox x:Name="OnlyPerishablesCheck" Content="Alleen bederfelijke producten" Margin="5"
                      VerticalAlignment="Center"
                      Checked="OnSearchClicked" Unchecked="OnSearchClicked"/>
                </DockPanel>
            </GroupBox>
        </StackPanel>


        <!-- DataGrid -->
        <DataGrid x:Name="ProductsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="ProductsGrid_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- Vervallen = Rood -->
                        <DataTrigger Binding="{Binding ExpirationDate}" Value="{x:Static sys:DateTime.MinValue}">
                            <Setter Property="Background" Value="White"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ExpirationDate}" Value="{x:Static sys:DateTime.Now}">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                        <!-- Handmatig: PerishableProduct kleurcodering -->
                        <DataTrigger Binding="{Binding IsPerishable}" Value="True">
                            <Setter Property="Background" Value="LightGoldenrodYellow"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Categorie" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Aantal" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Vervaldatum" Binding="{Binding ExpirationDate, StringFormat=d}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detail panel -->
        <GroupBox Header="Product Details" Grid.Row="2" Margin="0,10,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Naam:" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <Label Content="Categorie:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="CategoryBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="Aantal:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="QuantityBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <Label Content="Vervaldatum:" Grid.Row="3" Grid.Column="0"/>
                <DatePicker x:Name="ExpirationPicker" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
                            Margin="20,0,0,0">
                    <Button Content="Toevoegen" Width="75" Margin="5" Click="OnAddClicked"/>
                    <Button Content="Bewerken" Width="75" Margin="5" Click="OnEditClicked"/>
                    <Button Content="Verwijderen" Width="75" Margin="5" Click="OnDeleteClicked"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
